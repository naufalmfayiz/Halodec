<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Doctor List</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('_navbar') %>

    <div class="container">
      <div style="text-align: center">
        <h2>Doctor List</h2>
        <a href="/doctor/add" class="btn btn-primary">Add Doctor</a>
        <% if (notif) { %>
          <p style="color: red;"><%= notif%></p>
        <% } %>
      </div>
      <div>
        <form class="d-flex align-items-center" role="search">
        <input class="form-control me-2" type="search" placeholder="Search..." aria-label="Search" name="search">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </div>

      <table class="table">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Specialist</th>
            <th scope="col">Cost</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% data.map(perData =>{ %>
          <tr>
            <td><%= perData.name %></td>
            <td><%= perData.specialist %></td>
            <td><%= perData.idrCurrency %></td>
            <td>
              <a href="doctor/<%= perData.id %>/edit" class="btn btn-warning"
                >Edit</a
              >
              <a href="doctor/<%= perData.id %>/delete" class="btn btn-danger"
                >Delete</a
              >
              <a href="doctor/<%= perData.id %>/appointment" class="btn btn-success"
                >Create Appontment</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
